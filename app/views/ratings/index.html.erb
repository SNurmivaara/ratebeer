

<h1>List of ratings</h1>

<p>Number of ratings: <%= @ratings.count %></p>

<div id="ratings">
    <ul>
        <% @ratings.each do |rating| %>
            <li> <%= render rating %> <%= link_to rating.user.username, rating.user %> </li>
        <% end %>
    </ul>
</div>

<%= link_to "New rating", new_rating_path %>