

<h1>Ratings</h1>

<div class="stats container">
  <div class="row">
    <div class="col-sm-4">
      <h3>Best beers</h3>
      <table class="table">
        <thead>
          <th>Beer</th>
          <th>Average</th>
        </thead>
        
        <% @top_beers.each do |beer| %>
          <tr>
            <td><%= beer.name %></td>
            <td><%= beer.average_rating %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col-sm-4">
      <h3>Best breweries</h3>
      <table class="table">
        <thead>
          <th>Brewery</th>
          <th>Average</th>
        </thead>
        
        <% @top_breweries.each do |brewery| %>
          <tr>
            <td><%= brewery.name %></td>
            <td><%= brewery.average_rating %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col-sm-4">
      <h3>Best styles</h3>
      <table class="table">
        <thead>
          <th>Style</th>
          <th>Average</th>
        </thead>
        
        <% @top_styles.each do |style| %>
          <tr>
            <td><%= style.name %></td>
            <td><%= style.average_rating %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

<div id="top-users">
  <h4>Most active users</h4>
    <ol>
      <% @top_users.each do |user| %>
        <li><%= user.username %></li>
      <% end %>
    </ol>
<div>

<div id="recent">
  <h4>Recent ratings</h4>
    <ul>
        <% @ratings.recent.each do |rating| %>
            <li><%= render rating %></li>
        <% end %>
    </ul>
</div>

<%= link_to "New rating", new_rating_path %>